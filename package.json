{
  "name": "image2banners",
  "productName": "Image2Banners",
  "author": "MARS Team",
  "description": "Converts images into complex Minecraft banners.",
  "version": "2.3.0",
  "main": "main.js",
  "scripts": {
    "start": "electron src/electron/main.js",
    "clean": "rm -rf dist release node_modules/.cache",
    "install-deps": "pip3 install -r backend/requirements.txt && npm install",
    "build:python": "pyinstaller app.spec",
    "build:electron": "electron-builder",
    "build": "npm run build:python && npm run build:electron",
    "build:mac": "npm run build:python && electron-builder --mac",
    "build:win": "npm run build:python && electron-builder --win",
    "rebuild": "npm run clean && npm run install-deps && npm run build"
  },
  "keywords": [],
  "license": "BSD 2-Clause",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "image-size": "^1.1.1",
    "ps-tree": "^1.2.0"
  },
  "build": {
    "appId": "com.marsteam.image2banners",
    "productName": "Image2Banners",
    "directories": {
      "output": "release"
    },
    "files": [
      "assets/**/*",
      "lang/**/*",
      "!**/*.py",
      "!*.spec",
      "!requirements.txt",
      "!build.sh",
      "!build.bat",
      "!dist/**/*",
      "!release/**/*",
      "!.git*",
      "!.vscode",
      "!.idea"
    ],
    "extraResources": [
      {
        "from": "dist/",
        "to": "python"
      },
      {
        "from": "assets",
        "to": "python/assets"
      },
      {
        "from": "lang",
        "to": "python/lang"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
