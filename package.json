{
  "name": "image2banners",
  "productName": "Image2Banners",
  "author": "MARS Team",
  "description": "Converts images into complex Minecraft banners.",
  "version": "2.3.0",
  "main": "main.js",
  "scripts": {
    "start": "electron ."
  },
  "keywords": [],
  "license": "BSD 2-Clause",
  "devDependencies": {
    "electron": "^33.2.1",
    "electron-builder": "^25.1.8"
  },
  "dependencies": {
    "image-size": "^1.1.1",
    "ps-tree": "^1.2.0"
  },
  "build": {
    "appId": "com.marsteam.image2banners",
    "productName": "Image2Banners",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!**/*.py",
      "!*.spec",
      "!requirements.txt",
      "!build.sh",
      "!build.bat",
      "!dist/**/*",
      "!release/**/*",
      "!.git*",
      "!.vscode",
      "!.idea"
    ],
    "extraResources": [
      {
        "from": "dist/",
        "to": "python"
      },
      {
        "from": "assets",
        "to": "python/assets"
      },
      {
        "from": "lang",
        "to": "python/lang"
      }
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ]
    }
  }
}
